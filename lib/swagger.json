                    "description": "true / false"
                  },
                  {
                    "name": "email",
                    "in": "query",
                    "required": false,
                    "type": "string",
                    "description": "email"
                  },
                  {
                    "name": "fullName",
                    "in": "query",
                    "required": false,
                    "type": "string",
                    "description": "fullName"
                  },
                  {
                    "name": "userType",
